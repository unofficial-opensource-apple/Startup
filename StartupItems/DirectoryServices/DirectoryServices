#!/bin/sh

##
# Directory Services
##

. /etc/rc.common

StartService ()
{
    ##
    # Directory Services
    ##
    if pid=$(GetPID lookupd); then
        return 0
    else
        ConsoleMessage "Starting Directory Services"
        lookupd
    fi
}

StopService ()
{
    return 0
}

RestartService ()
{
    if pid=$(GetPID lookupd); then
	ConsoleMessage "Resetting Directory Services"
	kill -HUP "${pid}"
    fi
}

RunService "$1"
